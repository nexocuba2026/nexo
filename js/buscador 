// Lista de términos de servicios y productos
const palabrasClave = [
    // Servicios
    "Construcción y Remodelación", "Servicios Gastronómicos", "Transporte de Cargas", 
    "Diseño de Logotipos", "Tarjetas de Presentación", "Manual de Identidad",
    "Flyers Publicitarios", "Plegables", "Diseño de Interiores",

    // Tienda - Productos por tienda
    "Cemento Portland", "Nevera Industrial", "Mueble Comercial",
    "Proveedor ConstruRed", "Proveedor FríoPro", "Proveedor Diseño Interior Plus",

    // Empresas
    "Empresa ABC", "Restaurante El Sabor", "Transporte Rápido",
    "Tienda ABC", "Diseño Interior Plus"
];

// Referencias al DOM
const input = document.getElementById("busquedaInput");
const sugerenciasContainer = document.getElementById("sugerencias");

// Función para mostrar sugerencias
input.addEventListener("input", () => {
    const valor = input.value.toLowerCase();
    sugerenciasContainer.innerHTML = "";

    if(valor.length === 0) return; // no mostrar nada si está vacío

    const filtradas = palabrasClave.filter(p => p.toLowerCase().includes(valor));
    
    filtradas.forEach(s => {
        const div = document.createElement("div");
        div.textContent = s;
        div.addEventListener("click", () => {
            input.value = s;
            sugerenciasContainer.innerHTML = "";
            // Redirigir según término seleccionado (puedes adaptar los enlaces)
            if(s.includes("Construcción") || s.includes("Servicios Gastronómicos") || s.includes("Transporte")){
                window.location.href = "servicios.html";
            } else {
                window.location.href = "tienda.html";
            }
        });
        sugerenciasContainer.appendChild(div);
    });
});

// Ocultar sugerencias si se hace click fuera
document.addEventListener("click", e => {
    if(!input.contains(e.target) && !sugerenciasContainer.contains(e.target)){
        sugerenciasContainer.innerHTML = "";
    }
});